{
  "name": "npm-bookit",
  "version": "0.0.0",
  "description": "CLI Tool to generate a book from markdown files",
  "main": "./lib/index.js",
  "bin": {
    "bookit": "lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf .nyc_output/ coverage/",
    "build": "babel src --out-dir lib",
    "lint": "npm run lint:js",
    "lint:js": "eslint --fix --format=node_modules/eslint-formatter-pretty .",
    "lint:staged": "lint-staged",
    "pretest": "npm run clean && npm run lint",
    "test": "better-npm-run test"
  },
  "betterScripts": {
    "test": {
      "command": "nyc mocha --require @babel/register --recursive ./test/helper.js \"./test/unit/**/*.test.js\"",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": ""
      }
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "pre-commit": "lint:staged",
  "author": "TVeal",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-function-sent": "^7.10.4",
    "@babel/plugin-proposal-json-strings": "^7.10.4",
    "@babel/plugin-proposal-numeric-separator": "^7.10.4",
    "@babel/plugin-proposal-throw-expressions": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "better-npm-run": "^0.1.1",
    "chai": "^4.2.0",
    "chai-string": "^1.5.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-import": "^2.22.1",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "debug": "^4.2.0",
    "event-stream": "^4.0.1",
    "highland": "^2.13.5",
    "inquirer": "^7.3.3",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.20",
    "supports-color": "^7.2.0",
    "uuid": "^8.3.1",
    "yargs": "^16.1.0"
  }
}
